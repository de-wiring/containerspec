( sudo gem list --local | grep -q rake ) || sudo gem install rake -v '10.4.0' --no-rdoc --no-ri
( sudo gem list --local | grep -q cucumber ) || sudo gem install cucumber -v '1.3.17' --no-rdoc --no-ri
( sudo gem list --local | grep -q docker ) || sudo gem install docker-api -v '1.15.0' --no-rdoc --no-ri
